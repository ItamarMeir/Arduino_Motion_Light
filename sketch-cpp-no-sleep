// Define constants
const int LED_pin = 13;         // Pin connected to the LED (digital pin 13)
const int PIR_INPUT = 2;       // Pin connected to the PIR sensor (digital pin 2)
const int delay_ms = 30000;     // Delay time for turning off the LED in milliseconds

void setup()
{
  pinMode(LED_pin, OUTPUT);     // Set LED_pin as an output
  pinMode(PIR_INPUT, INPUT_PULLUP); // Set PIR_INPUT as an input with pull-up resistor
}

void loop()
{
  int ReadVal = digitalRead(PIR_INPUT); // Read the value from the PIR sensor
  if (ReadVal) {
    digitalWrite(LED_pin, HIGH);  // Turn on the LED if motion is detected
    delay(delay_ms);              // Keep the LED on for the specified delay time
  }
  else {
    digitalWrite(LED_pin, LOW);   // Turn off the LED if no motion is detected
  }
}
